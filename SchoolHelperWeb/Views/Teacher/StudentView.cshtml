@model IEnumerable<SchoolHelperDomainModels.Abstraction.IStudent>
@{
    ViewData["Title"] = "StudentView";
    Layout = "~/Views/Shared/_logedInLayout.cshtml";
}
@section Styles {
    <link href="@Url.Content("~/css/studentview.css")" rel="stylesheet" type="text/css" />
}
<section class="addstudent-section" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="addstudent-box">
            <a asp-area="" asp-controller="Teacher" asp-action="Addstudent" class="btn btn-primary">Add Student</a>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="cards-box">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="row delete-icon-box">
                            <a asp-area="" asp-controller="Teacher" asp-action="DeleteStudent">
                                <svg width="1em"
                                     height="1em"
                                     viewBox="0 0 16 16"
                                     class="bi bi-x-circle"
                                     fill="currentColor"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                    <path fill-rule="evenodd"
                                          d="M11.854 4.146a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708-.708l7-7a.5.5 0 0 1 .708 0z" />
                                    <path fill-rule="evenodd"
                                          d="M4.146 4.146a.5.5 0 0 0 0 .708l7 7a.5.5 0 0 0 .708-.708l-7-7a.5.5 0 0 0-.708 0z" />
                                </svg>
                            </a>
                        </div>
                        <img src="@item.Img" class="card-img-top" alt="..." />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name @item.Surname</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Number: @item.Number</li>
                            <li class="list-group-item">Gender:@item.Gender</li>
                            <li class="list-group-item">BirthDay: @item.BirthDay</li>
                            <li class="list-group-item">Address: @item.Address</li>
                        </ul>
                        <div class="card-body row justify-content-between">
                            <a asp-controller="Teacher" asp-action="" class="btn btn-primary">Update</a>
                            <a asp-controller="Grade" asp-action="Grading" asp-route-id="@item.Key" class="btn btn-primary">Grades</a>
                            <a asp-controller="Teacher" asp-action="SendMail" asp-route-id="@item" class="btn btn-primary">Send Mail</a>
                        </div>
                    </div>
                }
            }
            else
            {

            }

        </div>
    </div>
</section>

