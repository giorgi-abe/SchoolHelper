
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/css/register.css")" rel="stylesheet" type="text/css" />
}
<main class="main">
    <div class="container">
        <div class="signup-content">
            <div class="signup-img">
                <img src="https://images.unsplash.com/photo-1544717305-2782549b5136?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80"
                     alt="" />
                <div class="overlay"></div>
                <div class="signup-img-content">
                    <h2>Register now</h2>
                    <p>while its free</p>
                </div>
            </div>
            <form class="needs-validation" action="Register" method="post" novalidate>
                <div class="form-row">
                    <div class="form-group">
                        <div class="form-item">
                            <label for="validationTooltip01">First name</label>
                            <input type="text"
                                   name="name"
                                   class="form-control"
                                   id="validationTooltip01"
                                   required />
                        </div>
                        <div class="form-items">
                            <label for="validationTooltip02">Last name</label>
                            <input type="text"
                                   name="surname"
                                   class="form-control"
                                   id="validationTooltip02"
                                   required />
                        </div>
                        <div class="form-items">
                            <label for="validationTooltip01">Email</label>
                            <input type="text"
                                   name="email"
                                   class="form-control"
                                   id="validationTooltip01"
                                   required />
                        </div>
                        <div class="form-items">
                            <label for="validationTooltip01">Username</label>
                            <input type="text"
                                   name="username"
                                   class="form-control"
                                   id="validationTooltip01"
                                   required />
                        </div>
                        <div class="form-items">
                            <label for="validationTooltip01">password</label>
                            <input type="password"
                                   class="form-control"
                                   id="validationTooltip01"
                                   name="password"
                                   required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-item">
                            <label for="validationTooltip01">age</label>
                            <input type="number"
                                   class="form-control"
                                   name="age"
                                   id="validationTooltip01"
                                   required />
                        </div>
                        <div class="form-item">
                            <label for="">gender</label>
                            <div class="custom-control custom-radio">
                                <input type="radio"
                                       class="custom-control-input"
                                       id="customControlValidation2"
                                       name="gender"
                                       value="0"
                                       required />
                                <label class="custom-control-label"
                                       for="customControlValidation2">Male</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input type="radio"
                                       class="custom-control-input"
                                       id="customControlValidation2"
                                       name="gender"
                                       value="1"
                                       required />
                                <label class="custom-control-label"
                                       for="customControlValidation2">Female</label>
                            </div>
                            <div class="custom-control custom-radio mb-3">
                                <input type="radio"
                                       class="custom-control-input"
                                       id="customControlValidation3"
                                       name="gender"
                                       value="2"
                                       required />
                                <label class="custom-control-label"
                                       for="customControlValidation3">Others</label>
                            </div>
                        </div>
                        <div class="card-select-box">
                            <label for="">Your status</label>
                            <div class="card-select">
                                <input type="radio"
                                       name="accountType"
                                       id="Student"
                                       value="0"
                                       required />
                                <label class="monthly-label four colo"
                                       for="Student"></label>
                                <input type="radio"
                                       name="accountType"
                                       id="Teacher"
                                       value="1"
                                       required />
                                <label class="yearly-label four colo" for="Teacher"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit form</button>
            </form>
        </div>
    </div>
</main>
@section Scripts {
    <link href="@Url.Content("~/js/register.js")" />
}



